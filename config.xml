<?xml version='1.0' encoding='utf-8'?>
<widget id="com.senthur.backupcontact" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Contact 24x7</name>
    <description>
        Application To Retrive Your Contacts Anywhere When Your Device Is Poweredoff Or Missed 
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Young Developer Team
    </author>  
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.2" />
    <allow-navigation href="*" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~5.1.1" />
    <engine name="browser" spec="~4.1.0" />
	<engine name="windows" spec="~4.3.2" />
    <plugin name="cordova-plugin-device" spec="~1.1.2" />
    <plugin name="cordova-plugin-contacts" spec="~2.1.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.3" />
    <plugin name="cordova-plugin-dialogs" spec="~1.2.1" />
	<!--<plugin name="phonegap-plugin-mobile-accessibility" spec="~1.0.4-dev" />-->
	<plugin name="phonegap-plugin-mobile-accessibility" spec="https://github.com/phonegap/phonegap-mobile-accessibility.git" />
    <plugin name="cordova-plugin-splashscreen" spec="~3.2.2" />
    
    <preference name="SplashScreen" value="screen" />
    <splash src="platform/android/splash/res/screen.png" />
    <!--<splash src="platform/android/splash/res/drawable-Idpi/screen.png" platform="android" qualifier="ldpi" />
    <splash src="platform/android/splash/res/drawable-mdpi/screen.png" platform="android" qualifier="mdpi" />
    <splash src="platform/android/splash/res/drawable-hdpi/screen.png" platform="android" qualifier="hdpi" />
    <splash src="platform/android/splash/res/drawable-xxhdpi/screen.png"  platform="android" qualifier="xhdpi" />-->
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="fullscreen" value="false" />
    <icon src="platform/android/icon/icon_background.png" />
    <icon src = "platform/android/icon/background/mipmap-ldpi/ic_launcher.png" 
      platform = "android" qualifier = "ldpi" />
		
   <icon src = "platform/android/icon/background/mipmap-mdpi/ic_launcher.png" 
      platform = "android" qualifier = "mdpi" />
		
   <icon src = "platform/android/icon/background/mipmap-hdpi/ic_launcher.png" 
      platform = "android" qualifier = "hdpi" />
		
   <icon src = "platform/android/icon/background/mipmap-xhdpi/ic_launcher.png" 
      platform = "android" qualifier = "xhdpi" />
		
   <icon src = "platform/android/icon/background/mipmap-xxhddpi/ic_launcher.png" 
      platform = "android" qualifier = "xxhdpi" />
    
    <!--<splash src="fr-xhdpi.png" platform="android" qualifier="fr-xhdpi" />
    <splash src="portrait-xxhdpi.png" platform="android" qualifier="port-xxhdpi" />
    <splash src="landscape-xxhdpi.png" platform="android" qualifier="land-xxhdpi" />-->
</widget>